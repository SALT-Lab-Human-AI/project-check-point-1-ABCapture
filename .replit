modules = ["nodejs-20", "web", "bash", "postgresql-16"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "ABCapture"

[[workflows.workflow]]
name = "ABCapture"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd \"Concept Iteration\" && npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "autoscale"
run = ["sh", "-c", "cd 'Concept Iteration' && npm run start"]
build = ["sh", "-c", "cd 'Concept Iteration' && npm install && npm run build"]
